<!DOCTYPE html>
<html>
<head>
  <title>Notstagram</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

</head>

<body>

  <nav class="navbar sticky-top navbar-expand-lg bg-dark navbar-dark justify-content-center">
    <div class="container">
      <%= link_to image_tag("logo.gif", style: "height: 40px; width: auto"), root_path, class: 'nav-item' %>            <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapseNavbar">
        <ul class="navbar-nav ms-auto">
          <% if user_signed_in? %>
          <%= link_to "Upload", upload_path, class: 'nav-link btn btn-outline-success' %>
          <li class="nav-item dropdown">
            <a class="nav-link drop-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= image_tag(current_user.display_avatar(current_user), style: 'max-width:35px', class: 'img-fluid rounded-circle') %>
            </a>
            <ul class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
              <li><a class="dropdown-item"> <%= link_to "Profile", profile_path(current_user.username) %> </a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></a></li>
            </ul>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to "Create an Account", new_user_registration_path, class: 'btn btn-secondary' %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: 'btn btn-primary' %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <br>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
