<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for post do |f| %>

      <div class="form-group">
        <%= f.file_field :image, accept: 'image/png,image/jpeg' %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, class: 'form-control' %>
      </div>

      <%= f.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
